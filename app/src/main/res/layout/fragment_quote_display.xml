<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vancityinfo.vancityinfocommidities.Fragment.QuoteDisplay">

    <ProgressBar
        android:id="@+id/quote_display_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/quote_display_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/quote_display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/QuoteName"/>

                <TextView
                    android:id="@+id/quote_display_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/QuoteSymbol"/>

                <TextView
                    android:id="@+id/quote_display_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextView"/>

                <TextView
                    android:id="@+id/quote_display_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextView"/>

                <TextView
                    android:id="@+id/quote_display_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextView"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/quote_display_layout_calculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/in_light_0"
                android:backgroundTint="@color/in_light_0"
                android:padding="@dimen/ui_margin">

                <TextView
                    android:id="@+id/quote_display_calc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    style="@style/TextView"
                    android:text="@string/quote_display_calc_text"/>

                <EditText
                    android:id="@+id/quote_display_calc_input"
                    android:layout_width="@dimen/input_length"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/quote_display_calc_text"
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:inputType="numberDecimal"/>

                <Spinner
                    android:id="@+id/quote_display_calc_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quote_display_calc_text"
                    android:layout_alignParentLeft="true"/>

                <Spinner
                    android:id="@+id/quote_display_calc_fineness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@id/quote_display_calc_spinner"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/quote_display_calc_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quote_display_calc_spinner"
                    android:text="@string/quote_display_eval_text"/>

                <TextView
                    android:id="@+id/quote_display_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quote_display_calc_button"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/quote_display_date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/quote_display_date_text"/>

                <Button
                    android:id="@+id/quote_display_start_date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/quote_display_date_text"
                    android:layout_margin="@dimen/ui_margin"/>

                <Button
                    android:id="@+id/quote_display_end_date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ui_margin"
                    android:layout_toRightOf="@id/quote_display_start_date_picker"
                    android:layout_alignBaseline="@id/quote_display_start_date_picker"/>

                <ImageButton
                    android:id="@+id/quote_display_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ui_margin"
                    android:layout_below="@id/quote_display_start_date_picker"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@id/quote_display_start_date_picker"
                    android:src="@drawable/ic_cached_white_36dp"/>

                <com.androidplot.xy.XYPlot
                    android:id="@+id/quote_display_plot"
                    android:layout_width="fill_parent"
                    android:layout_height="400dp"
                    android:layout_below="@id/quote_display_refresh"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
